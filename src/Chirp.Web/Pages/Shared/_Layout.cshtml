<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1>
        <a href="/"><img src="/images/icon1.png" alt="Icon1"/></a>Chirp!
    </h1>
    
    <!-- todo: These two User.Identity.Name below need to reference the Author table -->
    <nav style="display: flex; justify-content: space-between; align-items: center; padding: 0 0.5rem;">
        <div>
            <a class="navigation_button" href="/">Public Timeline</a>
            |
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a class="navigation_button" href="/user/@(User.Identity.Name)">My timeline</a>    
                <a>|</a>
                <a class="navigation_button" href="/Identity/Account/Logout">Logout [@(User.Identity.Name)]</a>
            }
            else
            {
                <a class="navigation_button" href="/Identity/Account/Register">Register</a>
                <a>|</a>
                <a class="navigation_button" href="/Identity/Account/Login">Login</a>        
            }
        </div>
    </nav>
    
    <!-- typescript scriplets -->
    <script src="~/js/app.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    <div class=body>
        @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
</html>
