<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link id="theme-stylesheet" href="/css/colors-dark-theme.css" rel="stylesheet" type="text/css" data-light-href="/css/colors-light-theme.css" data-dark-href="/css/colors-dark-theme.css" />
    <link href="/css/main.css" rel="stylesheet" type="text/css" />
    <link href="/css/navigation.css" rel="stylesheet" type="text/css" />
    <link href="/css/cheeps.css" rel="stylesheet" type="text/css" />
    <link href="/css/pagination.css" rel="stylesheet" type="text/css" />
    <link href="/css/about-me.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div class="theme-toggle">
    <button id="themeToggleButton" type="button" aria-label="Switch to light theme">
        <i class="fa fa-sun-o" aria-hidden="true"></i>
    </button>
</div>
<div class=page>
    <header>
        <a href="/"><img src="/images/logo.svg" alt="logo"/></a><h1>Chirp!</h1>
    </header>
    
    <!-- todo: These two User.Identity.Name below need to reference the Author table -->
    <nav class="navigation-bar">
        <div>
            <a class="navigation-button" href="/">Public Timeline</a>
            |
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a class="navigation-button" href="/user/@(User.Identity.Name)">My Timeline</a>    
                <a>|</a>
                <a class="navigation-button" href="/user/@(User.Identity.Name)/about">About Me</a>
                <a>|</a>
                <a class="navigation-button" href="/Identity/Account/Logout">Logout [@(User.Identity.Name)]</a>
            }
            else
            {
                <a class="navigation-button" href="/Identity/Account/Register">Register</a>
                <a>|</a>
                <a class="navigation-button" href="/Identity/Account/Login">Login</a>        
            }
        </div>
    </nav>
    
    <!-- typescript scriplets -->
    <script src="~/js/app.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    <div class=body>
        @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
</html>
