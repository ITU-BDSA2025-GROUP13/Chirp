@using Chirp.Infrastructure.Services
@using Chirp.Web.Constants

@model CheepDTO
<div class="cheep-edit-wrapper">
    <form method="post"
          asp-page-handler="Edit"
          id="cheep-edit-@Model.CheepId"
          class="cheep-edit-form hidden"
          data-preserve-scroll="true">
        <textarea required
                  name="EditedCheepText"
                  class="cheep-edit-input"
                  id="cheep-edit-input-@Model.CheepId"
                  maxlength="@Constants.MaxCheepLength"
                  placeholder="Edit...">@Model.Text</textarea>
        <input name="CheepIdForEditing" type="hidden" value="@Model.CheepId">
        <br>
        <input type="submit" value="Finish">
        <small id="edit-form-@Model.CheepId-charcount">160 characters left</small>
    </form>
</div>
